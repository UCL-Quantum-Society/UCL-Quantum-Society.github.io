---
export const prerender = true;
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import NewsletterCard from '../components/NewsletterCard.astro';
import { fetchNewsletters, getPdfUrl, type Newsletter } from '../lib/strapi';

let newsletters: Newsletter[] = [];
try {
  newsletters = await fetchNewsletters();
} catch (e) {
  console.error(e);
  newsletters = []; // fail soft
}
---

<Layout title="UCL Quantum Society - Newsletters">
  <main class="relative min-h-screen">
    <div aria-hidden="true" class="absolute inset-0 grid grid-cols-2 -space-x-52 opacity-40"></div>
    <Container>
      <div class="relative pt-50 ml-auto">
        <div class="lg:w-2/3 text-center mx-auto">
          <h1 class="text-white text-balance font-medium text-5xl md:text-6xl xl:text-7xl mb-8">Newsletters</h1>
          <p class="text-primary text-lg mb-12"></p>

          {
            newsletters.map((n, i) => {
              const pdfUrl = getPdfUrl(n);
              return (
                <NewsletterCard
                  issueNumber={n.Issue_Number}
                  releaseDate={new Date(n.Release_Date).toLocaleDateString('en-GB', {
                    day: '2-digit',
                    month: 'short',
                    year: 'numeric',
                  })}
                  dateTime={n.Release_Date}
                  pdfUrl={pdfUrl}
                  marginTop={i === 0 ? 'mt-0' : 'mt-10'}
                />
              );
            })
          }
        </div>
      </div>
    </Container>
  </main>
</Layout>
